<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.Calizer" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- <item name="android:statusBarColor" >?colorPrimary</item>  -->


        <!-- Customize your theme here. -->


    </style>



    <style name="Theme.Calizer" parent="Base.Theme.Calizer">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/blue_night</item>
        <item name="colorAccent">@color/blue_night</item>
        <item name="colorOnPrimary">@color/blue_night</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!--  App Background Color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/blue_night</item>


        <!--  Text Color -->
        <item name="colorOnBackground">@color/blue_night</item>


        <item name="colorOnSecondary">@color/blue_night</item>
        <item name="colorSecondary">@color/white</item>


    </style>

    <style name="Theme.Calizer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Calizer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Calizer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>